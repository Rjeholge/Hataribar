<div class="row mb-5">
  <div class="mx-auto">
    <h3>業界一覧</h3>
  </div>
</div>

<div class="row mb-5">
  <div class="mx-auto">
    <div class="col-md-12">

      <% @industries.each do |industry| %>
        <div class="form-group form-inline">
          <div class="col-md-6"><strong><%= industry.indsutry %></strong></div>
          <div class="col-md-6"><%= link_to "業界名を編集する", edit_admin_indusrtry_path(industry.id) %></div>
        </div>
      <% end %>

      <%= form_with model: @industry, url: admin_industries_path, method: :post do |f| %>
        <div class="form-group form-inline">
          <div class="col-md-6"><%= f.text_field :industry %></div>
          <div class="col-md-6"><%= f.submit "新規登録", class: "btn btn-dark" %></div>
        </div>
      <% end %>

    </div>
  </div>
</div>
