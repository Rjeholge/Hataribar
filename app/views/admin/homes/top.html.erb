<%= render 'layouts/notice' %>

<div class="row mb-5">
  <div class="mx-auto">
    <h3>体験談一覧</h3>
  </div>
</div>

<div class="row mb-5">

  <% if @posts == [] %>

    <div class="col-md-12 d-flex justify-content-center">
      <h3>投稿された体験談はありません。</h3>
    </div>

  <% else %>

    <% @posts.each do |post| %>
      <div class="col-md-6">
        <div class="post bg-light">
          <%= link_to admin_post_path(post.id) do %>
          <div>
            <strong>投稿日時：</strong>
            <span><%= post.created_at.to_s(:datetime_jp) %></span>
            <p></p>
          </div>
          <div>
            <h4><業種></h4>
            <p><%= post.industry.industry %></p>
          </div>
          <div>
            <h4><仕事内容></h4>
            <p><%= post.answer_what %></p>
          </div>
          <% end %>
        </div>
      </div>
    <% end %>

  <% end %>

</div>

<div="row mb-5">
  <%= paginate @posts %>
</div>