<%= render 'layouts/notice' %>

<div class="row">
  <div class="error-messages" style="color: #ff4500;">
    <%= render "devise/shared/error_messages", resource: @user %>
  </div>
</div>

<div class="row">
  <div class="mx-auto">
    <h3>ユーザー情報</h3>
  </div>
</div>

<div class="row mb-5">
  <div class="mx-auto">
    <div class="col-md-12">

      <%= form_with model: @user, url: admin_user_path, method: :patch, local: true do |f| %>

      <div class="field my-3">
        <%= f.label :ユーザー名 %><br />
        <%= f.text_field :user_name, autofocus: true %>
      </div>

      <div class="field my-3">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email %>
      </div>

      <div class="field my-3">
        <%= f.label :年齢 %><br />
        <%= f.select :age, [10, 20, 30, 40, 50, 60, 70] %>代
      </div>

      <div class="field my-5">
        <p>ステータス</p>
        <span>
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, '有効'  %>
        </span>
        <span>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, '退会' %>
        </span>
      </div>

      <div class="col mt-5 text-center">
        <div class="actions">
          <%= f.submit "編集内容を保存", class: "btn btn-dark" %>
        </div>
      </div>

      <% end %>

    </div>
  </div>
</div>

<div class="row">
  <div class="mx-auto">
    <%= link_to "<< ユーザー一覧へ戻る", admin_users_path %>
  </div>
</div>
