<div class="row">
  <div class="error-messages" style="color: #ff4500;">
    <% if obj.errors.any? %>
      <%= obj.errors.count %>件のエラーが発生しました
      <ul>
        <% obj.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
