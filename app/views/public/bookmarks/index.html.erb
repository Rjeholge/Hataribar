<div class="row mb-5">

  <div class="col-md-4 mb-5">
    <div class="border border-secondary">

      <div class="mb-5">
        <%= render 'public/searches/search' %>
      </div>

      <div class="mb-5">
        <%= render 'public/industries/index', industries: @industries %>
      </div>

    </div>
  </div>

  <div class="col-md-8">
    <% if @bookmarks == [] %>

      <h3>ブックマークした体験談はありません。</h3>

    <% else %>

      <h3>ブックマークした体験談一覧</h3>
      <% @bookmarks.each do |bookmark| %>
      <div class="post bg-light">
        <%= link_to post_path(bookmark.post) do %>
        <div>
          <h4><業種></h4>
          <p><%= bookmark.post.industry.industry %></p>
        </div>
        <div>
          <h4><仕事内容></h4>
          <p><%= bookmark.post.answer_what %></p>
        </div>
        <% end %>
      </div>
      <% end %>

    <% end %>
  </div>

</div>
