<div class="row mb-5">
  <div class="col-md-4">
    <% render 'public/searches/search' %>
  </div>

  <div class="col-md-8">
    <h3>ブックマークした体験談一覧</h3>
    <% @bookmarks.each do |bookmark| %>
      <div class="post bg-secondary">
        <%= link_to post_path(bookmark.post) do %>
        <div>
          <h4>業種</h4>
          <p><%= bookmark.post.industry_id %></p>
        </div>
        <div>
          <h4>仕事内容</h4>
          <p><%= bookmark.post.answer_what %></p>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>

</div>
