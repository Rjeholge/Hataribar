<div class="row">
  <div class="col-md-4">
    <% render 'public/searches/search' %>
  </div>

  <div class="col-md-8">
    <h3>体験談一覧</h3>
    <% @posts.each do |post| %>
      <div class="post bg-secondary">
        <%= link_to post_path(post.id) do %>
        <div>
          <h4>業種</h4>
          <p><%= post.industry_id %></p>
        </div>
        <div>
          <h4>仕事内容</h4>
          <p><%= post.answer_what %></p>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>

</div>
